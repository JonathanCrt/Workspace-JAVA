package td1_concurrence;

public class HelloThread {
	
	private static int  NB_THREADS = 4;
	
	public static void main(String[] args) {
		
		/**
		 * Un Runnable sert à transferer du code
		 * On remarque à l'affichage que les entiers affichés ne suivent pas 
		 * un ordre chnrologique, car on ne sait comment sont exécuter les thread.
		 */
		/*
		Runnable runnable = () -> {
			
			for(int i = 0; i < 5000; i++) {
				System.out.println("hello " + i);
			}
		};
		
		for(int i = 0; i < 4; i++) {
			Thread t = new Thread(runnable);
			t.start();
		}
		*/
		for(int i = 0; i < NB_THREADS; i++) {
			int id = i;
			new Thread(() -> {
				for(int j = 0; j < 5000; j++) {
					System.out.println("hello " + id + " "+ j);
				}
			}).start();
		}
		
		
		
	}
}
