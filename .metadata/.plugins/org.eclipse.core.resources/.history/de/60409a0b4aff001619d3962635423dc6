		System.out.println("Votre Etat : "vous êtes majeur");
		}
		else {
			System.out.println("vous êtes mineur");
		}
		
		System.out.println("Votre Statut : "+Variable.significationIMC());
		
		
	
			
		
		
		
	}
	
