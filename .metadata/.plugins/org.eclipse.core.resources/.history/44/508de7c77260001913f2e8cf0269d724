package fr.umlv.fight;

public class Robot {
	
	private  String nom;
	private  int ptDeVies;
	
	
	public Robot(String nom) {
		super();
		this.nom = nom;
		this.ptDeVies = 10;
	}
	
	@Override
	public String toString() {
		return ("Robot " + this.nom);
	}
	
	/**
	 * 
	 * @param rb
	 */
	public void fire(Robot rbA, Robot rbB) {
		
		rbB.ptDeVies -= 2;
		if(rbB.ptDeVies < 0) {
			rbB.ptDeVies = 0; 
		}
	}
	/**
	 * 
	 * @return boolean
	 */
	public  Boolean isDead() {
		if(this.ptDeVies == 0) {
			System.out.println("Le Robot " + this.nom + " est mort ");
			return true;
		}
		return false;
	}
	
	
	

	public static void main(String[] args) {
		Robot bob = new Robot("bob");
	    System.out.println(bob);  // affiche "Robot bob"
	}
}
