package fr.upem.tidy;

public class Accessory extends AbstractItem {
	private final boolean useful;

	/**
	 * @param name
	 * @param material
	 * @param timeToLive
	 * @param useful
	 */
	public Accessory(String name, Material material, int timeToLive, boolean useful) {
		super(name, material, timeToLive);
		this.useful = useful;
	}
	
	
	public boolean isUseful() {
		return this.useful;
	}
	
	
	
	// [ACCESSOIRE] - inutile -  cravate à pois (SILK) - {2000}
	@Override
	public String toString() {
		StringBuilder st = new StringBuilder();
		st.append("[ACCESSOIRE] - ")

		.append(" - ")
		.append(this.getName())
		.append(" (")
		.append(this.getMaterial())
		.append(") - {")
		.append(this.timeToLive())
		.append("}");
		
		return st.toString();
	}
	
	
	
}
